<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <!--<Button
        android:id="@+id/view1_button"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:text="@string/button_text"
        android:textSize="20pt" />-->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/select_tool"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:background="@drawable/r0"
            android:orientation="horizontal"/>
        <Button
            android:id="@+id/erase_tool"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:background="@drawable/r1"
            android:orientation="horizontal"/>
    </LinearLayout>
    <Button
        android:id="@+id/line_tool"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:background="@drawable/r2"
        android:layout_height="match_parent"
        android:orientation="horizontal"/>
    <Button
        android:id="@+id/circle__tool"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:background="@drawable/r3"
        android:layout_height="match_parent"
        android:orientation="horizontal"/>
    <Button
        android:id="@+id/rec_tool"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:background="@drawable/r4"
        android:layout_height="match_parent"
        android:orientation="horizontal"/>
    <Button
        android:id="@+id/fill_tool"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:background="@drawable/r5"
        android:layout_height="match_parent"
        android:orientation="horizontal"/>

</LinearLayout>